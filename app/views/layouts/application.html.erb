<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
	<div id="banner">
		<%= image_tag("logo.png")%>
		<%= @page_title || "Pragmatic Bookshelf" %>
	</div>

	<div id="columns">
		<div id="side">
			<div id="cart">
			<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, :id =>"cart") do %>
					<%= render @cart %>
				<% end %>
			<% end %>
			</div>
			<a href="/"> Home </a> <br />
			<a href="/products"> Products </a> <br />
			<a href="/carts/2"> Carts </a> <br />
			<a href="/store/index"> Store </a> <br />
		</div>
		<div id="main">
			<%= yield %>	
		</div>
	</div>	
</body>
</html>
